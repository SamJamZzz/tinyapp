<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (username !== undefined) { %>
      <h5>Logged in as: <%= username %> User</h5>
      <form method="POST" action="/logout" class="d-flex">
        <button type="submit">Logout</button>
      </form>
      <% } else {%>
      <form method="POST" action="/login" class="d-flex">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
          style="width: 300px; margin: 1em"
        />
        <button type="submit">Login</button>
      </form>
      <% } %>
  </nav>
</header>